#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'

Bundler.require

$: << 'lib'

require './config/config'
require 'cloud_balancer'

EM.run do
  daemon = CloudBalancer::Status.new do |consumer|
    consumer.close
  end
  transport = CloudBalancer::Transport::AMQP.new
  runner = CloudBalancer::Runner.new(daemon, transport)
  runner.run
end
